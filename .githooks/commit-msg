#!/bin/bash

# Reject commit messages with attribution patterns
commit_regex="(Co-Authored-By|Generated with|Generated by|Created by|Authored by|Attribution|claude|Claude|Anthropic|anthropic|AI-generated|AI generated|LLM|Gemini|gemini|ChatGPT|chatgpt|OpenAI|openai|ü§ñ)"
if grep -qiE "$commit_regex" "$1"; then
    echo "‚ùå ERROR: Commit message contains attribution/advertising patterns!"
    echo "   Remove any references to:"
    echo "   - Co-Authored-By lines"
    echo "   - Generated/Created by statements"  
    echo "   - AI/LLM/Claude/Anthropic/Gemini/ChatGPT/OpenAI mentions"
    echo "   - Robot emojis or similar markers"
    echo ""
    echo "   Your commit message:"
    echo "   -------------------"
    cat "$1"
    echo "   -------------------"
    exit 1
fi

# All good
exit 0