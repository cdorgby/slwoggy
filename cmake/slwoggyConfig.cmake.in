@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Find required dependencies
find_dependency(fmt REQUIRED)

# Include the exported targets
include("${CMAKE_CURRENT_LIST_DIR}/slwoggyTargets.cmake")

# Provide taocpp::json as interface library
if(NOT TARGET taocppjson)
    add_library(taocppjson INTERFACE)
    # Try to find taocpp/json includes
    find_path(TAOCPP_JSON_INCLUDE_DIR
        NAMES tao/json.hpp
        PATHS
            "${CMAKE_CURRENT_LIST_DIR}/../../../include"
            "${CMAKE_INSTALL_PREFIX}/include"
        PATH_SUFFIXES taocpp-json
    )
    if(TAOCPP_JSON_INCLUDE_DIR)
        target_include_directories(taocppjson INTERFACE ${TAOCPP_JSON_INCLUDE_DIR})
    else()
        # Fall back to FetchContent if not found
        include(FetchContent)
        FetchContent_Declare(
            taocpp_json
            GIT_REPOSITORY https://github.com/taocpp/json.git
            GIT_TAG 1.0.0-beta.14
        )
        FetchContent_MakeAvailable(taocpp_json)
        target_include_directories(taocppjson INTERFACE ${taocpp_json_SOURCE_DIR}/include)
    endif()
endif()

check_required_components(slwoggy)